<?xml version="1.0" encoding="UTF-8"?>
<TestSuite name="电商系统测试套件" version="1.0">
    <TestCase id="TC001" priority="high" category="用户管理">
        <setup>
            <condition>电商系统已部署并运行</condition>
            <condition>测试数据库已初始化</condition>
            <condition>管理员账户可用</condition>
        </setup>
        
        <action>
            <step>打开商品管理页面</step>
            <step>点击"添加商品"按钮</step>
            <step>填写商品信息：名称、价格、库存</step>
            <step>上传商品图片</step>
            <step>设置商品分类</step>
            <step>点击"保存"按钮</step>
        </action>
        
        <verification>
            <result>商品保存成功提示</result>
            <result>商品出现在商品列表中</result>
            <result>商品状态为"上架"</result>
            <result>库存数量正确显示</result>
        </verification>
    </TestCase>
    
    <TestCase id="TC002" priority="medium" category="订单管理">
        <setup>
            <condition>用户已登录</condition>
            <condition>购物车中有商品</condition>
            <condition>用户有有效的收货地址</condition>
        </setup>
        
        <action>
            <step>进入购物车页面</step>
            <step>检查商品信息和数量</step>
            <step>点击"去结算"按钮</step>
            <step>选择收货地址</step>
            <step>选择支付方式</step>
            <step>确认订单信息</step>
            <step>提交订单</step>
        </action>
        
        <verification>
            <result>订单创建成功</result>
            <result>生成唯一订单号</result>
            <result>库存相应减少</result>
            <result>发送订单确认邮件</result>
        </verification>
    </TestCase>
    
    <TestCase id="TC003" priority="low" category="搜索功能">
        <setup>
            <condition>系统中有多个商品</condition>
            <condition>搜索索引已建立</condition>
        </setup>
        
        <action>
            <step>在搜索框输入关键词"手机"</step>
            <step>点击搜索按钮</step>
            <step>查看搜索结果</step>
        </action>
        
        <verification>
            <result>显示相关商品列表</result>
            <result>搜索结果按相关性排序</result>
            <result>显示商品基本信息</result>
        </verification>
    </TestCase>
</TestSuite>