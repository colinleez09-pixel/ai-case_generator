<?xml version="1.0" encoding="UTF-8"?>
<testcase>
    <precondition>系统已启动并运行正常</precondition>
    <precondition>用户已成功登录系统</precondition>
    <precondition>用户具有管理员权限</precondition>
    
    <step>打开用户管理页面</step>
    <step>点击"添加用户"按钮</step>
    <step>填写用户基本信息：姓名、邮箱、部门</step>
    <step>设置用户角色为"普通用户"</step>
    <step>点击"保存"按钮</step>
    
    <expected>系统显示"用户创建成功"提示信息</expected>
    <expected>新用户出现在用户列表中</expected>
    <expected>新用户状态为"激活"</expected>
    <expected>系统发送激活邮件到用户邮箱</expected>
</testcase>