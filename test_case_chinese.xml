<?xml version="1.0" encoding="UTF-8"?>
<测试用例集>
    <测试用例 编号="TC001" 名称="银行转账功能测试">
        <前置条件>
            <条件>CBS系统运行正常</条件>
            <条件>修改系统变量SYS_abc的值为12</条件>
            <条件>设置变量，初始金额为100</条件>
        </前置条件>
        
        <测试步骤>
            <步骤>登录CBS系统</步骤>
            <步骤>进入账户管理模块</步骤>
            <步骤>选择转账功能</步骤>
            <步骤>输入转账金额20元</步骤>
            <步骤>确认转账操作</步骤>
        </测试步骤>
        
        <预期结果>
            <结果>转账操作成功</结果>
            <结果>account_balance表amount字段值为80</结果>
            <结果>生成转账记录</结果>
            <结果>系统显示余额更新</结果>
        </预期结果>
    </测试用例>
    
    <测试用例 编号="TC002" 名称="账户查询功能测试">
        <前置条件>
            <条件>用户已登录系统</条件>
            <条件>账户中有交易记录</条件>
        </前置条件>
        
        <测试步骤>
            <步骤>进入账户查询页面</步骤>
            <步骤>输入查询条件</步骤>
            <步骤>点击查询按钮</步骤>
        </测试步骤>
        
        <预期结果>
            <结果>显示符合条件的交易记录</结果>
            <结果>记录信息完整准确</结果>
        </预期结果>
    </测试用例>
</测试用例集>